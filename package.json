    "sitemapper": "^3.2.18",
    "turndown": "^7.2.0",
    "undici": "^6.21.0"
  },
  "devDependencies": {
    "@types/cheerio": "^0.22.35",
    "@types/node": "^22.13.14",
    "@types/picomatch": "^3.0.2",
    "@types/turndown": "^5.0.5",
    "@vitest/coverage-v8": "^3.0.9",
    "standard": "^17.1.2",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2",
    "vitest": "^3.0.9"
